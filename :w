from scrapy.spiders import BaseSpider
from scrapy.selector import Selector
from scrapy.http import Request

from hamrobazaar.items import HamrobazaarItem

class HamroSpider(BaseSpider):
    name = "hamrospider"
    allowed_domains = ["hamrobazaar.com"]
    start_urls = [
            "http://hamrobazaar.com/c3-computer-and-peripherals",
        ]

    def parse(self, response):
        selec = Selector(response)
        item = HamrobazaarItem()
        print('-'*30, response.xpath("/html/body/table/tr[2]/td/table/tr[1]/td/table[5]/tr/td[2]/table[4]/tr[1]/td[3]").extract())

        selectors = response.xpath("/html/body/table/tr[2]/td/table/tr[1]/td/table[5]/tr/td[2]//table").extract()
        print('-' * 30, selectors)

        item['phone'] = "123"
        yield item

